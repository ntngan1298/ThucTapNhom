@model IEnumerable<TTNhom.Models.EF.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family:Georgia, 'Times New Roman', Times, serif; color:blue; text-align:center;">Danh mục Sản Phẩm</h2>

<div class="admin-add">
    <p style="text-align:center">

        @Html.ActionLink("Thêm mới", "Create")
    </p>
</div>



<div class="limiter">
    <div class="container-table100" style="padding-left: 10px; padding-top:0px;">
        <div class="wrap-table100" style="width:100%">
            <div class="table100 ver1 m-b-110" style="width: 1124px;">
                <div class="table100-head">
                    <table>
                        <thead>
                            <tr class="row100 head">
                                <th class="cell100 column1" width="20%">
                                    @Html.DisplayNameFor(model => model.MaLSP)
                                </th>
                                <th class="cell100 column2" style="width:40%">
                                    @Html.DisplayNameFor(model => model.TenLSP)
                                </th>
                                <th class="cell100 column5" style="width:auto"></th>

                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="table100-body js-pscroll">
                    <table>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="row100 body">
                                    <td class="cell100 column1" style="width:20%"> @Html.DisplayFor(modelItem => item.MaLSP)</td>
                                    <td class="cell100 column2" style="width:40%"> @Html.DisplayFor(modelItem => item.TenLSP)</td>
                                    <td class="cell100 column5" style="width:auto">
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaLSP }) |
                                        @Html.ActionLink("Xem", "Details", new { id = item.MaLSP }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLSP })
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>








