@model IEnumerable<TTNhom.Models.EF.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family:Georgia, 'Times New Roman', Times, serif; color:blue; text-align:center;">Nhân Viên</h2>

<div class="admin-add">
    <p style="text-align:center">

        @Html.ActionLink("Thêm mới", "Create")
    </p>
</div>
   


    <div class="limiter">
        <div class="container-table100"style="padding-left: 10px; padding-top:0px;">
            <div class="wrap-table100" style="width:100%">
                <div class="table100 ver1 m-b-110" style="width: 1124px;">
                    <div class="table100-head">
                        <table>
                            <thead>
                                <tr class="row100 head">
                                    <th class="cell100 column1">
                                        @Html.DisplayNameFor(model => model.HoTen)
                                    </th>
                                    <th class="cell100 column2">
                                        @Html.DisplayNameFor(model => model.GT)
                                    </th>
                                    <th class="cell100 column3">
                                        @Html.DisplayNameFor(model => model.DiaChi)
                                    </th>
                                    <th class="cell100 column4">
                                        @Html.DisplayNameFor(model => model.SDT)
                                    </th>
                                    <th class="cell100 column5"></th>
                                  
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <div class="table100-body js-pscroll">
                        <table>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr class="row100 body">
                                    <td class="cell100 column1"> @Html.DisplayFor(modelItem => item.HoTen)</td>
                                    <td class="cell100 column2"> @Html.DisplayFor(modelItem => item.GT)</td>
                                    <td class="cell100 column3"> @Html.DisplayFor(modelItem => item.DiaChi)</td>
                                    <td class="cell100 column4"> @Html.DisplayFor(modelItem => item.SDT)</td>
                                    <td class="cell100 column5">
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }) |
                                        @Html.ActionLink("Xem", "Details", new { id = item.MaNV }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV })
                                    </td>
                                </tr>
                                }

                             

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>





